{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": { "nengi": ["src/nengi-shim.d.ts"] },
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "ts-vue-plugin"
      }
    ]
  },
	"exclude": ["node_modules/**/*", "dist/**/*", "out/**/*"]
}
