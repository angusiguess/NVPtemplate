{
  "name": "template",
  "version": "1.0.0",
  "description": "A template for a client-server nengi/pixi/vue game",
  "main": "index.js",
  "scripts": {
    "client": "parcel serve src/client/ui/index.html --port=4040",
    "server": "npx ts-node-dev --rs false --inspect --respawn --debounce 2000 src/server/main.ts",
    "start": "npx concurrently \"npm:server\" \"npm:client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "angus fletcher",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.10.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "dependencies": {
    "nengi": "^1.17.0",
    "pixi.js": "^5.3.3",
    "vue": "^2.6.12"
  },
  "staticFiles": {
    "staticPath": "assets",
    "watcherGlob": "**"
  }
}
